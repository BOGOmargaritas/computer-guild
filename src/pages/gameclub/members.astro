---
import Layout from "../../layouts/gameclublayout.astro";
import Card from "../../components/card.astro";
import EmailForm from "../../components/email-form.svelte";
const games = await Astro.glob("../../content/games/*.md");
games.sort((a, b) => (b.frontmatter.subtitle && a.frontmatter.subtitle ? b.frontmatter.subtitle.localeCompare(a.frontmatter.subtitle) : null));
---

<Layout title="members">
    <div style="padding-bottom: 50px;">
        <div style="margin-bottom: 50px;">
            <div class="card-wrapper">
                <div class="topgraphicbox">
                    <div class="gamebox">
                        <div class="infopagehead"><img src="/members.png" style="margin-bottom: -25px;" /></div>
                        <div class="abouttext" style="padding-top: 0px; padding-bottom: 10px; width: 90%; margin: auto;">
                            <p class="sub" style="text-align: center; color: #bbb">
                                The Computer Guild Game Clubâ„¢ consists of four members.
                            </p>
                            <div style="display: flex; flex-wrap: wrap; justify-content: center;">
                            <div class="memberblock">
                                <img src="/about/justin.png" class="membername" />
                                <img src="/j.png" class="memberimg">
                                <div class="ff7">
                                    <p>Aquarius</p>
                                    <p>Game Club Player</p>
                                    <p>Sensitive to ugly colors</p>
                                    <h1>Top 3 Video Games</h1>
                                    <li>For The Frog The Bell Tolls</li>
                                    <li>Diablo 2</li>
                                    <li>Oblivion</li>
                                </p>
                                </div>
                            </div>
                            <div class="memberblock">
                                <img src="/about/cullen.png" class="membername" />
                                <img src="/c.jpg" class="memberimg">
                                <div class="ff7">
                                    <p>Pisces</p>
                                    <p>Game Club Player</p>
                                    <p>Dislikes 2D games</p>
                                    <h1>Top 3 Video Games</h1>
                                    <li>Persona 4</li>
                                    <li>Dark Souls</li>
                                    <li>Metal Gear Solid 3</li>
                                    </div>
                            </div>
                            <div class="memberblock">
                                <img src="/about/patrick.png" class="membername" />
                                <img src="/p.jpg" class="memberimg">
                                <div class="ff7">
                                    <p>Aquarius</p>
                                    <p>Game Club Player</p>
                                    <p>Open-minded video game player</p>
                                    <h1>Top 3 Video Games</h1>
                                    <li>Katamari Damacy</li>
                                    <li>SimCity 4</li>
                                    <li>Pokemon Renegade Platinum</li>
                                    </div>
                            </div>
                            <div class="memberblock">
                                <img src="/about/brandon.png" class="membername" />
                                <img src="/b.jpg" class="memberimg">
                                <div class="ff7">
                                    <p>Sagittarius</p>
                                    <p>Game Club Listener</p>
                                    <p>Just loves music</p>
                                    <h1>Top 3 Video Game Soundtracks</h1>
                                    <li>Jet Set Radio Future</li>
                                    <li>Halo 2</li>
                                    <li>Katamari Damacy</li>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</Layout>