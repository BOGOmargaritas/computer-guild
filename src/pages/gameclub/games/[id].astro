---
import games from "../../../../games.json";
import Layout from "../../../layouts/gameclublayout.astro";

export async function getStaticPaths() {
    return games.map(game => ({
        params: { id: game.title.toLowerCase().replace(/ /g, "-") },
        props: { game: game }
    }));
}

const { game } = Astro.props;
---
<Layout title={game.title}>
    
<div class="gamebox" style="margin-top: 100px; position: relative; height: auto; width: 94%; top: 100px; margin: auto; border-radius: 15px; background-color: #333;">
    
    <img src={game.graphic} style="width: 102%; border-radius: 15px; margin-left: -7px;"/>

    <div class="gameinfo" style="padding-top: 5px; padding-bottom: 20px; width: 90%; margin: auto; overflow: visible; overflow-wrap: break-word;">
        
        <h1>{game.title}</h1>
        <p>{game.description}</p>
    </div>
    
</div>
    </Layout>
